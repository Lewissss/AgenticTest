{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "schemaVersion",
        "app",
        "scenarioId",
        "mode",
        "steps"
    ],
    "properties": {
        "schemaVersion": {
            "type": "integer",
            "const": 1
        },
        "app": {
            "type": "string"
        },
        "scenarioId": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "mode": {
            "type": "string",
            "enum": [
                "ui",
                "api",
                "mixed"
            ]
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "createdBy": {
            "type": "string",
            "enum": [
                "explorer",
                "human"
            ]
        },
        "base": {
            "type": "object",
            "properties": {
                "uiBaseUrl": {
                    "type": "string"
                },
                "apiBaseUrl": {
                    "type": "string"
                }
            }
        },
        "variables": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "steps": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "kind",
                    "args"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "kind": {
                        "type": "string"
                    },
                    "args": {
                        "type": "object"
                    },
                    "checkpoint": {
                        "type": "object",
                        "properties": {
                            "expect": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "type"
                                    ],
                                    "properties": {
                                        "type": {
                                            "type": "string"
                                        }
                                    },
                                    "additionalProperties": true
                                }
                            }
                        }
                    },
                    "capture": {
                        "type": "object",
                        "properties": {
                            "screenshot": {
                                "type": "boolean"
                            },
                            "dom": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        }
    }
}